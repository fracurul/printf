#########################################
#                LIB NAME               #
#########################################

NAME = libftprintf.a

#########################################
#              COMPILATOR               #
#########################################

CC = gcc

#########################################
#           COMPILATOR FLAGS            #
#########################################

FLAGS = -Wall -Wextra -Werror

#########################################
#           LIB FUNCTIONS               #
#########################################

SRC = ft_printf.c ft_printf_utils.c ft_printhex.c\

#########################################
#              LIB INDEX                #
#########################################

AR =  ar -curs

#########################################
#               OBJECTS                 #
#########################################

OBJ = $(SRC:.c=.o)

#########################################
#            CLEAN FUNCTION             #
#########################################

CLEAN = rm -rf

#########################################
#              COMPILE ALL              #
#########################################

all: $(NAME)
$(NAME) : $(OBJ)
	@$(AR) $(NAME) $(OBJ)


#########################################
#           COMPILE .c to .o            #
#########################################

%.o: %.c
	@echo "compilando archivos"
	@$(CC) $(FLAGS) -c -o $@ $<

#########################################
#              DELETE .o                #
#########################################

clean:
	@$(CLEAN) $(OBJ)

#########################################
#              DELETE ALL               #
#########################################
fclean : clean
	@$(CLEAN) $(NAME)

#########################################
#         DELETE ALL & REMAKE           #
#########################################

re: fclean all


.PHONY: all re clean fclean